{
  "installCommand": "cd medical-website && npm ci --legacy-peer-deps",
  "buildCommand": "cd medical-website && npm run build",
  "outputDirectory": "medical-website/dist",
  "headers": [
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|webp|svg|gif|ico|avif|woff2|woff|ttf)",
      "headers": [
        { "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }
      ]
    }
    ,
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=60, stale-while-revalidate=300" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "^(?!www\\.sanital\\.es$).*" }
      ],
      "destination": "https://www.sanital.es/:path*",
      "permanent": true
    }
  ]
}
